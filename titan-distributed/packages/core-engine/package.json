{
  "name": "titan-core-engine",
  "version": "0.1.0",
  "private": true,
  "main": "titan_core.node",
  "napi": {
    "name": "titan-core",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-pc-windows-msvc",
        "x86_64-unknown-linux-gnu",
        "x86_64-apple-darwin",
        "aarch64-apple-darwin"
      ]
    }
  },
  "scripts": {
    "build": "napi build --release --platform",
    "build:debug": "napi build --platform",
    "build:win": "napi build --release --platform --target x86_64-pc-windows-msvc",
    "test": "cargo test",
    "bench": "cargo bench",
    "clean": "cargo clean && rimraf *.node"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "rimraf": "^5.0.0"
  }
}
